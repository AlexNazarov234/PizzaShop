<h4>My order</h4>
 
<table class="table table-stripped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Qty</th>
		</tr>		
	</thead>
	<tbody>

		<% total_price = 0 %>
		<% total_qty = 0 %>

		<% @items.each do |item|  %>
		<tr>
			<td><%= item[0].title %></td>
			<td><%= item[0].price %></td>
			<td><%= item[1] %></td>

			<% total_qty += item[1].to_i %>
			<% total_price += item[0].price.to_f * item[1].to_i %>
		</tr>	
		<% end %>	
		

		<tr>
			<th></th>
			<th><%= total_price %></th>
			<th><%= total_qty %></th>
		</tr>	

	</tbody>
</table>

<form action="/place_order" method="post">

	<input type="hidden" name="order[orders_input]" value= "<%= @orders_input %>">

	 <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Your phone">
  </div>

  <div class="form-group">
    <label>Delivery address</label>
    <textarea name="order[address]" class="form-control" placeholder="Delivery adress"></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-lg">Place this order!</button>

</form>

