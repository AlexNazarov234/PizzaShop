<h2>Welcome to Pizza</h2>

<div class="row">

	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<%=	p.title %>
			</div>

			<div>
				<img src="<%=	p.path_to_image %>">
			</div>

			<div>
				<%=	p.description %>
			</div>

			<div>
				Размер <%=	p.size %> см
			</div>
 
			<div>
				Цена: <%=	p.price %> руб
			</div>

			<button type="button" class="btn btn-sm btn-success" onclick="add_to_card(<%= p.id %>)">В корзину</button>

		</div>
	<% end %>

</div>

